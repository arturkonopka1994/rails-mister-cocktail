<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Ingredient</th>
            <td><%= @cocktail.ingredients.name %></td>
          </tr>
          <tr>
            <th scope="row">Dose</th>
            <td><%= @cocktail.doses %></td>
          </tr>
      </table>
    </div>
  </div>
</div>