<nav class="navbar" style="background-color: rgb(237,48,114); padding-bottom: 0px; padding-left: 0px; padding-top: 15px;">
  <ul class="list-inline">
    <a class="list-inline-item" href="#">
      <%= link_to "Home", root_path, class: "btn btn-primary btn-md", style: "background-color:rgb(104,138,184); border-radius: 40px; border: none" %>
    </a>
    <a class="list-inline-item" href="#">
      <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary btn-md", style: "background-color:rgb(104,138,184); border-radius: 40px; border: none" %>
    </a>
  </ul>
</nav>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1 style= "color:white">Mr. Cocktail</h1>
    <p><span id="banner-typed-text"></span></p>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2 class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
          </div>
          <%# link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
